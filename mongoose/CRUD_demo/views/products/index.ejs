<%- include('../partials/head') %>

<%- include('../partials/navbar') %>

<div class="container">
    <% for (let i = 0; i < products.length; i++) { %>
        <% if (i % 4 === 0) { %>
            <div class="row">
        <% } %>

        <div class="col col-lg-3 col-md-3 col-sm-6 col-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title" style="display: inline;"><%= products[i].name %></h3>
                    <span class="badge text-bg-success"><%= products[i].catagory %></span>
                    <h5 class="card-text">Rs. <%= products[i].price %></h5>
                    <% if(products[i].qty !== 0){ %>
                        <p class="card-text"><%= products[i].qty %>kg Available</p>
                    <%}else{ %>
                        <p class="card-text">Out of Stock</p> 
                    <% } %> 
                    <a href="/products/<%= products[i].id %>" class="card-link link-offset-2 link-underline link-underline-opacity-0">Details</a>
                </div>
            </div>
        </div>

        <% if ((i + 1) % 4 === 0 || (i + 1) === products.length) { %>
            </div>
        <% } %>
    <% } %>
</div>

<%- include('../partials/footer') %>
